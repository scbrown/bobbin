{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "bobbin hook inject-context",
            "statusMessage": "Loading code context...",
            "timeout": 10,
            "type": "command"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "bobbin hook prime-context",
            "timeout": 5,
            "type": "command"
          }
        ]
      }
    ]
  }
}
